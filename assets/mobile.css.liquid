.headline-md { font-size: var(--font-heading-medium);}
.headline-sm { font-size: var(--font-heading-small);}
.body-font { font-family: var(--FONT-STACK-BODY);}
.align-left {text-align: left}

.modal--default.modal-wrapper--has-image {
  border-radius: 4px;
}

.header__wrapper .dropdown__family .navlink {
  padding: 10px 0;
}

#Login .form-field {
  margin: 0 auto 0px;
}

.custom_account_section {
  margin-bottom: 45px;
}

#Register .page__heading {
  text-align: left;
}

.template-article .article__wrapper {
  padding-top: 30px;
} 

@media only screen and (max-width: 750px) {
 .custom_account_section {
    margin-bottom: 0px;
  }
  .center-text-mobile {text-align: center;}
  .center-text-mobile .hero__button {
    justify-content: center;
  }
  .mobile-padding-top {
    padding-top: var(--PTM);
  }  
  .mobile-padding-bottom {
    padding-bottom: var(--PBM);
  } 
}

@media only screen and (min-width: 990px) {
  .hero__content .hero__description.medium-width{
    max-width: 530px;
  }
}

.form-field,
#Login .form-field {
    margin-bottom: 10px;
}

.form-field.action-bottom,
#Login .form-field.action-bottom {
    margin-top: 15px;
}