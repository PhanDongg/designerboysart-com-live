/** Artwork **/
.template-collection {
    --COLOR-BORDER: #ECECEC;
}

.template-collection #CollectionLoop,
.related__products .grid  {
    --LAYOUT-GUTTER: 4px;
    --outer: var(--LAYOUT-OUTER);
    --gutter: var(--LAYOUT-GUTTER);
    --gap: var(--gutter);    
}

.template__artwork.template-collection #CollectionLoop,
.template__platinum-canvas-art.template-collection #CollectionLoop,
.template__art-collection.template-collection  #CollectionLoop,
#textural-wall-art-amp-artworks.template-collection  #CollectionLoop {
    --LAYOUT-GUTTER: 30px;
    --outer: var(--LAYOUT-OUTER);
    --gutter: var(--LAYOUT-GUTTER);
    --gap: var(--gutter);
    --PRODUCT-GRID-ASPECT-RATIO: 147%;
} 

.template__artwork .image-wrapper--cover img,
.template__platinum-canvas-art .image-wrapper--cover img,
.template-collection.template__art-collection .image-wrapper--cover img {
    object-fit: cover;
} 

.product-item--featured-image--custom {
    grid-column: span 2;
}

.product-item--featured-image--custom .product-item__image {
    padding-top: 69.5%!important;
}

.product-item--featured-image--custom .product-item__image  img {
    object-fit: cover;
}

.template-collection .collection__title--no-image {
    max-width: 670px;
    margin: 0 auto;
    padding-top: 0;
    padding-bottom: 0;
}

.template-collection .collection__title--no-image .hero__description {
    margin-bottom: 0;
}

.toggle-ellipsis__actions {
    padding: 0;
}

.toggle-ellipsis__actions:before {
    height: 15px;
}

.collection__nav {
    border-top: 0;
    border-color:  #ECECEC;
}

.popout--group .popout__toggle {
    border-right: 0;
}

.popout--sort .popout__toggle {
    border-left: 0;
}

.popout--sort .popout-list__item:nth-last-child(2),
.popout--sort .popout-list__item:nth-last-child(3),
.popout--sort .popout-list__item:nth-last-child(4){
    display: none;
}

.collection__products .grid-outer {
    padding: 15px var(--outer) 15px 15px;
}

.MetaobjectLoopWrapper.collection__products .grid-outer,
.template__art-collection .collection__products .grid-outer,
.template__artists .collection__products .grid-outer {
    padding: var(--outer);
}

.collection__sidebar {
    border: 0;
    font-size: var(--font-body-medium);
    line-height: 24px;      
}

.collection__sidebar__slider {
    border: 0;
    border-right: 1px solid   #ECECEC;
}

.pagination-custom__page--active {
    box-shadow: unset;
    border-bottom: 1px solid;
}

.pagination-custom {
    justify-content: space-between;
    text-transform: uppercase;
    font-size: var(--font-body-medium);
    border-top: 1px solid #ECECEC;
    margin-top: var(--outer);
    padding: calc(var(--outer) / 2) 0 var(--outer) 0;
}

.pagination-custom__page {
    margin: 0 8px;
}

@media only screen and (min-width: 750px) {
    .collection__sidebar__slider .collection__sidebar {
        padding: var(--inner) 0 var(--inner) var(--outer);
    }
}

.collection-nav radio-swatch .swatches  {
    display: none;
}

.filter-group__heading {
    border-bottom: 0;
    font-weight: 400;
    font-size: var(--font-body-medium);
    line-height: 24px;
    text-transform: uppercase;
    padding: 0 15px 0px 0;
}

.sidebar__item {
    font-size: var(--font-body-medium);
    line-height: 24px;  
    margin: 10px 0 0;
}

.sidebar__item a,
.sidebar__item label {
    padding-left: calc(1em + 15px);
    text-transform: capitalize;
}

.sidebar__item a:after, 
.sidebar__item label:after {
    width: 16px;
    height: 16px;
    border-color: #A3A3A3;
}

@media only screen and (min-width: 750px) {
    .template-collection .highlights  {
        padding-left: var(--sidebar-width);
    }

    .template-collection .highlights .highlights__container,
    .template-collection .highlights .highlights__content {
        padding-left: 15px;
        padding-right: var(--outer);
    }
}

.template-collection .highlights .highlights__items {
    justify-content: left;
}

.template-collection .highlights .highlights__items a {
    text-transform: capitalize;
    font-size: var(--font-14);
    padding: 12px var(--btn-left);
}

.template-collection .highlights .highlights__title  {
    font-size: var(--font-body-large);
    font-family: var(--FONT-STACK-BODY);
    line-height: var(--title-lg-height);
}

.template-collection .highlights .highlights__container {
    padding-bottom: 30px;
}

.template-collection .toggle-ellipsis__content h2 {
    font-size: var(--headline-sm);
    line-height: var(--headline-sm-height);
    font-family: var(--font-book);
}

@media only screen and (max-width: 1300px) {
    #CollectionLoop {
        --COLUMNS: 3;
    }
}

@media only screen and (max-width: 1100px) {
    #CollectionLoop {
        --COLUMNS: 2;
    }
}

