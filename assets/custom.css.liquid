    left: auto;
    right: 0;
    width: 90vw;
}

@keyframes slideInRightToLeft {
  0% {
    opacity: 0;
    transform: translateX(100%); /* Start off-screen to the right */
    visibility: hidden;
  }
  100% {
    opacity: 1;
    transform: translateX(0); /* Move to original position */
    visibility: visible;
  }
}

@keyframes slideInLeftToRight {
  0% {
    opacity: 1;
    transform: translateX(0); /* Move to original position */
    visibility: visible;
  }
  100% {
    opacity: 0;
    transform: translateX(100%); /* Start off-screen to the right */
    visibility: hidden;
  }
}

